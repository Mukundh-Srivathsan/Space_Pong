<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#090909"
    tools:context=".StartScreen">

    <TextView
        android:id="@+id/vsComputerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="420dp"
        android:layout_marginEnd="118dp"
        android:focusableInTouchMode="false"
        android:fontFamily="@font/black_ops_one"
        android:text="V/S Computer"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <Button
        android:id="@+id/compEasyBtn"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="500dp"
        android:background="@color/white"
        android:fontFamily="@font/black_ops_one"
        android:textAlignment="gravity"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="24sp"
        app:backgroundTint="@null" />

    <Button
        android:id="@+id/compHardBtn"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="20dp"
        android:background="@color/white"
        android:fontFamily="@font/black_ops_one"
        android:textAlignment="gravity"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="24sp"
        app:backgroundTint="@null" />

    <Button
        android:id="@+id/easyBtn"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="320dp"
        android:background="@color/white"
        android:fontFamily="@font/black_ops_one"
        android:textAlignment="gravity"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="24sp"
        app:backgroundTint="@null" />

    <Button
        android:id="@+id/hardBtn"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="20dp"
        android:background="@color/white"
        android:fontFamily="@font/black_ops_one"
        android:textAlignment="gravity"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="24sp"
        app:backgroundTint="@null" />

    <TextView
        android:id="@+id/titleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="96dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="97dp"
        android:fontFamily="@font/black_ops_one"
        android:text="SPACE                 PONG"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="48sp" />

    <TextView
        android:id="@+id/normalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="118dp"
        android:focusableInTouchMode="false"
        android:fontFamily="@font/black_ops_one"
        android:text="Normal Mode"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />
</RelativeLayout>